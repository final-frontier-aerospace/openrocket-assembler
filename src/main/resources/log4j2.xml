<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" packages="com.ffaero.openrocketassembler.controller">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%-5level] [%t/%logger{36}] %msg%n" />
        </Console>
        <LogAppender name="LogAppender">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%-5level] [%t/%logger] %msg%n" />
        </LogAppender>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console" />
            <AppenderRef ref="LogAppender" />
        </Root>
    </Loggers>
</Configuration>
